# prometheus input plugin
<source>
   @type prometheus
   bind 0.0.0.0
   port 24321
   metrics_path /metrics
</source>

<filter nginx>
  @type prometheus
  <metric>
    name nginx_request_time
    type gauge
    desc request time
    key request_time
  </metric>
</filter>

<match nginx>
  @type copy
  <store>
    @type prometheus
    <metric>
      name nginx_request_time
      type gauge
      desc request time
      key request_time
    </metric>
  </store>
  <store>
    @type stdout
  </store>
</match>